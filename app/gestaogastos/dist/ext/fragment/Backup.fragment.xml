<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:unified="sap.ui.unified"
    xmlns:layout="sap.ui.layout"
>
    id="RealizarBackup"
>
    <Dialog
        id="dialogBackup"
        title="Backup"
        class="sapUiResponsivePadding"
        contentWidth="100px"
        contentHeight="auto"
        core:require="{ handler: 'apps/dflc/gestaogastos/ext/fragment/Backup'}"
    >
        <content>
            <layout:VerticalLayout
                id="_IDGenVerticalLayout1"
                class="sapUiContentPadding"
                width="100%"
            >
                <unified:FileUploader
                    id="fileUploader"
                    name="file"
                    width="100%"
                    placeholder="Selecione um arquivo Excel para importar"
                    fileType="xlsx"
                    mimeType="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
                    change="onFileChange"
                />
            </layout:VerticalLayout>
        </content>
        <buttons>
            <Button
                id="_IDGenButton6"
                icon="sap-icon://download-from-cloud"
                press="handler.exportarBackup"
                type="Success"
            />

            <Button
                id="_IDGenButton3"
                icon="sap-icon://upload-to-cloud"
                type="Success"
                press="handler.importarBackup"
            />
            <Button
                id="_IDGenButton8"
                type="Negative"
                icon="sap-icon://decline"
                press="handler.cancelarBackup"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
