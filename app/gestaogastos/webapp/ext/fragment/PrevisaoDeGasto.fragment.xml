<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:macros="sap.fe.macros"
    xmlns:layout="sap.ui.layout.form"
>
    <VBox
        id="_IDGenVBox1"
        core:require="{ handler: 'apps/dflc/gestaogastos/ext/fragment/PrevisaoDeGasto'}"
    >
        <HBox
            id="_IDGenHBox1"
            alignItems="Center"
            class="sapUiTinyMarginBottom"
        >
            <!-- ListBox para os Anos -->
            <Select
                id="ListaAno"
                class="sapUiTinyMarginEnd"
            >
                <core:Item
                    id="_IDGenItem"
                    text="2024"
                />
                <core:Item
                    id="_IDGenItem1"
                    text="2025"
                />
                <core:Item
                    id="_IDGenItem2"
                    text="2026"
                />
                <core:Item
                    id="_IDGenItem3"
                    text="2027"
                />
                <core:Item
                    id="_IDGenItem4"
                    text="2028"
                />
                <core:Item
                    id="_IDGenItem5"
                    text="2029"
                />
                <core:Item
                    id="_IDGenItem6"
                    text="2030"
                />
            </Select>

            <!-- ListBox para os Meses -->
            <Select
                id="ListaMes"
            >
                <core:Item
                    id="_IDGenItem7"
                    text="1"
                />
                <core:Item
                    id="_IDGenItem8"
                    text="2"
                />
                <core:Item
                    id="_IDGenItem9"
                    text="3"
                />
                <core:Item
                    id="_IDGenItem10"
                    text="4"
                />
                <core:Item
                    id="_IDGenItem11"
                    text="5"
                />
                <core:Item
                    id="_IDGenItem12"
                    text="6"
                />
                <core:Item
                    id="_IDGenItem13"
                    text="7"
                />
                <core:Item
                    id="_IDGenItem14"
                    text="8"
                />
                <core:Item
                    id="_IDGenItem15"
                    text="9"
                />
                <core:Item
                    id="_IDGenItem16"
                    text="10"
                />
                <core:Item
                    id="_IDGenItem17"
                    text="11"
                />
                <core:Item
                    id="_IDGenItem18"
                    text="12"
                />
            </Select>

            <Button
                id="_IDGenButton"
                text="Buscar"
                press="handler.onBuscarSimulação"
            />
        </HBox>
        <layout:SimpleForm
            id="form"
            layout="ResponsiveGridLayout"
            editable="true"
            class="sapUiSmallMargin"
            width="300px"
        >
            <!-- Total Do Mês -->
            <Label
                id="_IDGenLabel"
                text="Total Do Mês"
            />
            <Input
                id="TotalDoMes"
                type="Number"
                value=""
                description=""
                editable="false"
                textAlign="End"
            />

            <!-- Total De Gastos -->
            <Label
                id="_IDGenLabel1"
                text="Total De Gastos"
            />
            <Input
                id="TotalDeGastos"
                type="Number"
                value=""
                description=""
                editable="false"
                textAlign="End"
            />

            <!-- Valor à Economizar -->
            <Label
                id="_IDGenLabel3"
                text="Valor à Economizar"
            />
            <Input
                id="ValorAEconomizar"
                type="Number"
                value=""
                description=""
                editable="false" 
                textAlign="End"
            />
        </layout:SimpleForm>
    </VBox>
</core:FragmentDefinition>
